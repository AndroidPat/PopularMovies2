<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">

    <!--Please insert your API key here-->
    <string name="apiKey">YOUR API KEY</string>


    <!--Name of the application displayed under the app icon on the device and in the action bar if not overwritten-->
    <string name="app_name">PopularMovies</string>

    <!--Label displayed in the action bar for movie detail activity-->
    <string name="title_activity_detail">Movie Details</string>

    <!--Labels displayed for settings-->
    <string name="title_activity_settings">Settings</string>
    <string name="action_settings">Settings</string>
    <string name="action_share">Share</string>
    <string name="pref_sort_label_rating">Hi-Rated</string>
    <string name="pref_sort_label_popularity">Most Popular</string>
    <string name="pref_sort_label_favourites">Favourites</string>
    <string name="pref_title_sort">Sort movies</string>

    <!-- Value in SharedPreferences for sort by popularity option [CHAR LIMIT=NONE] -->
    <string name="pref_sort_popularity" translatable="false">popularity</string>

    <!-- Value in SharedPreferences for sort by rating option [CHAR LIMIT=NONE] -->
    <string name="pref_sort_rating" translatable="false">rating</string>

    <!-- Value in SharedPreferences for sort by favourites option [CHAR LIMIT=NONE] -->
    <string name="pref_sort_favourites" translatable="false">favourites</string>

    <!--Content description for image view in fragment_detail.xml-->
    <string name="cd_poster" translatable="false">movie_poster</string>

    <!--Adding 'out of 10' string to the movie ratings displayed in the movie detail activity-->
    <string name="format_rating"><xliff:g id="rating">%1$s</xliff:g>/10</string>

    <!--Adding 'wrote' to the review's author name in reviews section -->
    <string name="format_wrote"><xliff:g id="rating">%1$s</xliff:g> wrote:</string>

</resources>
